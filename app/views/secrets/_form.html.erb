<form id="new-secret" action="<%= secrets_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="title">Title</label>
  <input type="text"
         name="secret[title]"
         value="<%= secret.title %>"
         id="title">

  <input type="hidden" name="secret[recipient_id]" value="<%= recipient.id %>">

  <label for="tags">

  <select name="secret[tag_ids][]" id="tags">
    <% tags.each do |tag| %>
      <option value="<%= tag.id %>"><%= tag.name %></option>
    <% end %>
  </select>

  <div class="secret-tag-selects"></div>

  <p><input type="submit" value="Continue &rarr;"></p>
</form>









